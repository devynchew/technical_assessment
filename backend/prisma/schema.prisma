datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model Post {
  id         Int      @id @default(autoincrement()) // Database internal ID
  externalId Int      // The 'id' from your CSV
  postId     Int
  name       String
  email      String
  body       String   @db.Text // Use Text type for long content
  createdAt  DateTime @default(now())
}
